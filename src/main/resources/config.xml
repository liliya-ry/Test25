<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="com.example.Test25.xml_context"/>
    <bean id="a" class="com.example.Test25.xml_context.A" scope="singleton"/>
    <bean id="b" class="com.example.Test25.xml_context.B" scope="singleton"/>
    <bean id="c" class="com.example.Test25.xml_context.C" scope="prototype"/>
</beans>